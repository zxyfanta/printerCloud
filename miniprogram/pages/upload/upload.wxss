/* upload.wxss */
page {
  background-color: #f8f9fa;
}

/* 页面标题 */
.page-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx 60rpx;
  color: white;
  text-align: center;
}

.page-title {
  font-size: 40rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.page-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 内容区域 */
.content {
  padding: 0 30rpx 40rpx;
  margin-top: -30rpx;
  position: relative;
  z-index: 10;
}

/* 上传区域 */
.upload-section {
  margin-bottom: 40rpx;
}

.upload-area {
  background-color: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.upload-content {
  padding: 80rpx 40rpx;
  text-align: center;
  border: 3rpx dashed #e8e8e8;
  margin: 30rpx;
  border-radius: 16rpx;
  transition: all 0.3s ease;
  background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
}

.upload-content:active {
  border-color: #667eea;
  background: linear-gradient(135deg, #f0f8ff 0%, #ffffff 100%);
  transform: scale(0.98);
}

.upload-icon-wrapper {
  margin-bottom: 30rpx;
}

.upload-icon {
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.3);
}

.upload-emoji {
  font-size: 60rpx;
  filter: grayscale(1) brightness(0) invert(1);
}

.upload-text {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
  display: block;
  margin-bottom: 15rpx;
}

.upload-desc {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 10rpx;
  line-height: 1.5;
}

.upload-limit {
  font-size: 24rpx;
  color: #999;
}

/* 文件信息 */
.file-info {
  padding: 30rpx;
}

.file-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.file-icon-wrapper {
  margin-right: 20rpx;
}

.file-icon {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #4facfe, #00f2fe);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(79, 172, 254, 0.3);
}

.file-emoji {
  font-size: 40rpx;
  filter: grayscale(1) brightness(0) invert(1);
}

.file-details {
  flex: 1;
}

.file-name {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  display: block;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.file-meta {
  display: flex;
  gap: 15rpx;
}

.file-size {
  font-size: 26rpx;
  color: #666;
  background: #f0f0f0;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
}

.file-type {
  font-size: 26rpx;
  color: #667eea;
  background: rgba(102, 126, 234, 0.1);
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
}

.file-actions {
  display: flex;
  gap: 15rpx;
}

.action-btn {
  flex: 1;
  padding: 20rpx;
  border-radius: 12rpx;
  border: none;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.action-btn.secondary {
  background: #f5f5f5;
  color: #666;
}

.action-btn.primary {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.action-btn::after {
  border: none;
}

.btn-text {
  color: inherit;
}

/* 上传进度 */
.upload-progress-section {
  margin-bottom: 40rpx;
}

.progress-card {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.progress-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 25rpx;
}

.progress-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.progress-percent {
  font-size: 32rpx;
  color: #667eea;
  font-weight: bold;
}

.progress-bar {
  width: 100%;
  height: 12rpx;
  background-color: #f0f0f0;
  border-radius: 6rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #667eea, #764ba2);
  transition: width 0.3s ease;
  border-radius: 6rpx;
}

.progress-tip {
  font-size: 26rpx;
  color: #999;
  text-align: center;
}

/* 文件预览 */
.file-preview-section {
  margin-bottom: 40rpx;
}

.preview-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.preview-header {
  text-align: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.preview-title {
  font-size: 36rpx;
  color: #1a1a1a;
  font-weight: 700;
  display: block;
  margin-bottom: 8rpx;
}

.preview-subtitle {
  font-size: 26rpx;
  color: #666;
  font-weight: 400;
}

.page-info {
  background: rgba(102, 126, 234, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.page-count {
  font-size: 26rpx;
  color: #667eea;
  font-weight: 500;
}

.image-preview {
  text-align: center;
  padding: 20rpx 0;
}

.preview-image {
  max-width: 100%;
  max-height: 400rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.preview-info {
  text-align: center;
  margin-top: 20rpx;
}

.info-text {
  font-size: 28rpx;
  color: #1890ff;
  font-weight: 600;
}

.document-preview {
  padding: 20rpx 0;
}

.pdf-preview,
.other-preview {
  text-align: center;
  padding: 40rpx 20rpx;
}

.preview-placeholder {
  text-align: center;
  padding: 40rpx 20rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
  border-radius: 16rpx;
  margin-bottom: 30rpx;
}

.placeholder-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 20rpx;
}

.placeholder-text {
  font-size: 32rpx;
  color: #1a1a1a;
  font-weight: 700;
  display: block;
  margin-bottom: 12rpx;
  word-break: break-all;
}

.placeholder-desc {
  font-size: 26rpx;
  color: #666;
  display: block;
  margin-bottom: 16rpx;
}

.placeholder-note {
  font-size: 24rpx;
  color: #1890ff;
  font-weight: 500;
}

.preview-tips {
  padding: 0 0 20rpx;
}

.tip-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  padding: 16rpx 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.tip-item:last-child {
  margin-bottom: 0;
}

.tip-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
}

.tip-text {
  font-size: 26rpx;
  color: #666;
  flex: 1;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.action-buttons .btn {
  flex: 1;
  min-width: 200rpx;
}

.btn {
  flex: 1;
  padding: 25rpx;
  border-radius: 50rpx;
  border: none;
  font-size: 32rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.btn.secondary {
  background: #f5f5f5;
  color: #666;
}

.btn.primary {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.3);
}

.btn::after {
  border: none;
}

.btn-text {
  color: inherit;
}

/* 支持格式说明 */
.file-formats-section {
  margin-bottom: 40rpx;
}

.formats-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.formats-header {
  margin-bottom: 30rpx;
}

.formats-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  text-align: center;
}

.formats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.format-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 25rpx 15rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
  border-radius: 16rpx;
  border: 1rpx solid #f0f0f0;
  transition: all 0.3s ease;
}

.format-item:active {
  transform: scale(0.95);
  background: linear-gradient(135deg, #f0f8ff 0%, #ffffff 100%);
}

.format-icon {
  font-size: 40rpx;
  margin-bottom: 10rpx;
  opacity: 0.8;
}

.format-name {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 4rpx;
}

.format-desc {
  font-size: 22rpx;
  color: #999;
  text-align: center;
}

.formats-note {
  text-align: center;
  padding: 20rpx;
  background: rgba(102, 126, 234, 0.05);
  border-radius: 12rpx;
}

.note-text {
  font-size: 26rpx;
  color: #667eea;
}
