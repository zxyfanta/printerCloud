/* upload.wxss */

/* 上传区域 */
.upload-area {
  margin-bottom: 30rpx;
}

.upload-content {
  background-color: white;
  border: 2rpx dashed #d9d9d9;
  border-radius: 12rpx;
  padding: 80rpx 40rpx;
  text-align: center;
  transition: all 0.3s;
}

.upload-content:active {
  border-color: #1890ff;
  background-color: #f0f8ff;
}

.upload-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
}

.upload-text {
  font-size: 32rpx;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.upload-desc {
  font-size: 28rpx;
  color: #666;
}

/* 文件信息 */
.file-info {
  background-color: white;
  border-radius: 12rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
}

.file-icon {
  font-size: 60rpx;
  margin-right: 20rpx;
}

.file-details {
  flex: 1;
}

.file-name {
  font-size: 32rpx;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.file-size {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 5rpx;
}

.file-type {
  font-size: 24rpx;
  color: #999;
}

.file-actions {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.action-btn {
  font-size: 28rpx;
  color: #1890ff;
  padding: 10rpx 20rpx;
  border: 1rpx solid #1890ff;
  border-radius: 6rpx;
  text-align: center;
  background-color: white;
}

.action-btn:active {
  background-color: #f0f8ff;
}

/* 上传进度 */
.upload-progress {
  background-color: white;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background-color: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.progress-fill {
  height: 100%;
  background-color: #1890ff;
  transition: width 0.3s;
}

.progress-text {
  font-size: 28rpx;
  color: #666;
  text-align: center;
}

/* 文件预览 */
.file-preview {
  background-color: white;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.preview-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.preview-title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.page-count {
  font-size: 28rpx;
  color: #666;
}

.image-preview {
  text-align: center;
}

.preview-image {
  max-width: 100%;
  max-height: 400rpx;
  border-radius: 8rpx;
}

.pdf-preview,
.other-preview {
  text-align: center;
  padding: 60rpx 20rpx;
}

.preview-tip {
  font-size: 28rpx;
  color: #999;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.action-buttons button {
  flex: 1;
}

/* 支持格式说明 */
.file-formats {
  background-color: white;
  border-radius: 12rpx;
  padding: 30rpx;
}

.formats-title {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.formats-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.format-item {
  display: flex;
  align-items: center;
  padding: 15rpx 20rpx;
  background-color: #f8f9fa;
  border-radius: 8rpx;
  min-width: 120rpx;
}

.format-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.format-name {
  font-size: 28rpx;
  color: #666;
}
