/* pages/preview/preview.wxss */
.page {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx;
}

.page-header {
  text-align: center;
  margin-bottom: 40rpx;
  padding-top: 40rpx;
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 16rpx;
}

.page-subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.content {
  padding: 0 20rpx;
}

/* 文件信息卡片 */
.file-info-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.file-icon-wrapper {
  margin-right: 30rpx;
}

.file-icon {
  font-size: 80rpx;
  display: block;
}

.file-details {
  flex: 1;
}

.file-name {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 12rpx;
  word-break: break-all;
}

.file-size {
  display: block;
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 8rpx;
}

.file-type {
  display: block;
  font-size: 26rpx;
  color: #1e3c72;
  font-weight: 500;
}

/* 预览状态 */
.preview-status {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  margin-bottom: 30rpx;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.status-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
}

.status-text {
  display: block;
  font-size: 32rpx;
  color: #333333;
  margin-bottom: 30rpx;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #1e3c72, #2a5298);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: #666666;
}

/* 预览操作 */
.preview-actions {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.success-tip {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
}

.tip-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.tip-text {
  font-size: 28rpx;
  color: #333333;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.btn.primary {
  background: linear-gradient(135deg, #1e3c72, #2a5298);
  color: #ffffff;
}

.btn.primary:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.btn.secondary {
  background: #ffffff;
  color: #1e3c72;
  border: 2rpx solid #1e3c72;
}

.btn.secondary:active {
  background: #f8f9fa;
}

.btn.large {
  height: 100rpx;
  font-size: 36rpx;
}

.btn-text {
  color: inherit;
}

/* 格式说明 */
.format-tips {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.tip-header {
  margin-bottom: 30rpx;
}

.tip-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.format-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.format-item {
  flex: 0 0 calc(50% - 10rpx);
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
}

.format-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.format-text {
  font-size: 26rpx;
  color: #666666;
  flex: 1;
}

/* 响应式适配 */
@media (max-width: 400px) {
  .format-item {
    flex: 0 0 100%;
  }
}
