/* index.wxss */
page {
  background-color: #f8f9fa;
}

/* 横幅样式 */
.banner {
  position: relative;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 30rpx 40rpx;
  color: white;
  overflow: hidden;
}

.banner-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="20" cy="20" r="2" fill="rgba(255,255,255,0.1)"/><circle cx="80" cy="80" r="3" fill="rgba(255,255,255,0.1)"/><circle cx="40" cy="70" r="1" fill="rgba(255,255,255,0.1)"/></svg>');
  opacity: 0.3;
}

.banner-content {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.banner-text {
  flex: 1;
}

.banner-title {
  font-size: 48rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 12rpx;
  letter-spacing: 1rpx;
}

.banner-desc {
  font-size: 32rpx;
  opacity: 0.9;
  display: block;
  margin-bottom: 8rpx;
}

.banner-subtitle {
  font-size: 26rpx;
  opacity: 0.7;
}

.banner-icon {
  width: 120rpx;
  height: 120rpx;
  margin-left: 20rpx;
}

.printer-image {
  width: 100%;
  height: 100%;
  filter: brightness(0) invert(1);
  opacity: 0.8;
}

/* 快速操作 */
.quick-action {
  padding: 30rpx;
  margin-top: -20rpx;
  position: relative;
  z-index: 10;
}

.quick-btn {
  width: 100%;
  background: linear-gradient(135deg, #ff6b6b, #ee5a24);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(255, 107, 107, 0.3);
  transition: all 0.3s ease;
}

.quick-btn::after {
  border: none;
}

.quick-btn-icon {
  font-size: 40rpx;
  margin-right: 15rpx;
}

.quick-btn-text {
  font-size: 36rpx;
  font-weight: bold;
}

/* 内容区域 */
.content {
  padding: 0 30rpx 40rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
  padding-top: 20rpx;
}

.section-title {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
  position: relative;
}

.section-title::before {
  content: '';
  position: absolute;
  left: -15rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 30rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 3rpx;
}

.more-link {
  font-size: 28rpx;
  color: #667eea;
  font-weight: normal;
}

/* 功能网格 */
.function-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
  margin-bottom: 50rpx;
}

.function-item {
  background-color: white;
  border-radius: 20rpx;
  padding: 40rpx 20rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.function-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #667eea, #764ba2);
}

.function-item.upload::before {
  background: linear-gradient(90deg, #4facfe, #00f2fe);
}

.function-item.orders::before {
  background: linear-gradient(90deg, #43e97b, #38f9d7);
}

.function-item.price::before {
  background: linear-gradient(90deg, #fa709a, #fee140);
}

.function-item.help::before {
  background: linear-gradient(90deg, #a8edea, #fed6e3);
}

.function-icon-wrapper {
  margin-bottom: 25rpx;
}

.function-icon {
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto;
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 16rpx rgba(240, 147, 251, 0.3);
}

.icon-emoji {
  font-size: 50rpx;
  filter: grayscale(1) brightness(0) invert(1);
}

.function-title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  display: block;
  margin-bottom: 12rpx;
}

.function-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}

/* 统计信息 */
.stats-section {
  margin-bottom: 50rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: 20rpx;
}

.stat-item {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.stat-number {
  font-size: 40rpx;
  font-weight: bold;
  color: #667eea;
  display: block;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 最近订单 */
.recent-orders {
  margin-bottom: 40rpx;
}

.order-list {
  background-color: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.order-item {
  padding: 30rpx 25rpx;
  border-bottom: 1rpx solid #f5f5f5;
  display: flex;
  align-items: center;
  transition: background-color 0.3s ease;
}

.order-item:last-child {
  border-bottom: none;
}

.order-item:active {
  background-color: #f8f9fa;
}

.order-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.order-icon {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.file-icon {
  font-size: 36rpx;
  filter: grayscale(1) brightness(0) invert(1);
}

.order-info {
  flex: 1;
}

.order-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  display: block;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 300rpx;
}

.order-desc {
  font-size: 26rpx;
  color: #666;
  display: block;
  margin-bottom: 6rpx;
  line-height: 1.3;
}

.order-time {
  font-size: 24rpx;
  color: #999;
}

.order-right {
  text-align: right;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.order-status {
  margin-bottom: 8rpx;
}

.status-badge {
  font-size: 24rpx;
  padding: 6rpx 12rpx;
  border-radius: 20rpx;
  color: white;
  font-weight: 500;
}

.status-badge.status-pending {
  background: #faad14;
}

.status-badge.status-paid {
  background: #52c41a;
}

.status-badge.status-printing {
  background: #1890ff;
}

.status-badge.status-completed {
  background: #52c41a;
}

.status-badge.status-cancelled {
  background: #ff4d4f;
}

.order-amount {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

/* 空状态 */
.empty-state {
  background: white;
  border-radius: 20rpx;
  padding: 80rpx 40rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 40rpx;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto 30rpx;
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.empty-emoji {
  font-size: 60rpx;
  filter: grayscale(1) brightness(0) invert(1);
}

.empty-title {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
  display: block;
  margin-bottom: 15rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  display: block;
  margin-bottom: 40rpx;
}

.empty-btn {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 25rpx 50rpx;
  font-size: 32rpx;
  font-weight: 500;
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.3);
}

.empty-btn::after {
  border: none;
}

.empty-btn-text {
  color: white;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background-color: white;
  border-radius: 12rpx;
  width: 80%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
}

.modal-header {
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.modal-title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  line-height: 1;
}

.modal-body {
  padding: 30rpx 20rpx;
  max-height: 60vh;
  overflow-y: auto;
}

/* 价格说明 */
.price-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.price-item:last-child {
  border-bottom: none;
}

.price-label {
  font-size: 30rpx;
  color: #333;
}

.price-value {
  font-size: 30rpx;
  color: #1890ff;
  font-weight: bold;
}

.price-note {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
  font-size: 24rpx;
  color: #999;
}

/* 帮助说明 */
.help-step {
  display: flex;
  align-items: flex-start;
  margin-bottom: 30rpx;
}

.help-step:last-child {
  margin-bottom: 0;
}

.step-number {
  width: 40rpx;
  height: 40rpx;
  background-color: #1890ff;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.step-text {
  font-size: 30rpx;
  color: #333;
  line-height: 40rpx;
}
