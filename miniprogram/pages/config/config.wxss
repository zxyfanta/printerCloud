/* config.wxss */

.section-title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 30rpx;
}

/* 文件信息 */
.file-section {
  margin-bottom: 20rpx;
}

.file-info {
  display: flex;
  align-items: center;
}

.file-icon {
  font-size: 60rpx;
  margin-right: 20rpx;
}

.file-details {
  flex: 1;
}

.file-name {
  font-size: 32rpx;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.file-desc {
  font-size: 28rpx;
  color: #666;
}

/* 打印配置 */
.print-config {
  margin-bottom: 20rpx;
}

.config-item {
  margin-bottom: 40rpx;
}

.config-item:last-child {
  margin-bottom: 0;
}

.config-label {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.config-control {
  width: 100%;
}

/* 数量输入 */
.number-input {
  display: flex;
  align-items: center;
  width: 200rpx;
}

.number-btn {
  width: 60rpx;
  height: 60rpx;
  background-color: #f0f0f0;
  border: none;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #333;
}

.number-btn:active {
  background-color: #e0e0e0;
}

.number-value {
  flex: 1;
  text-align: center;
  font-size: 30rpx;
  border: none;
  background-color: transparent;
}

/* 页数范围 */
.page-range-options {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.range-option {
  flex: 1;
  padding: 20rpx;
  background-color: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 8rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666;
}

.range-option.active {
  background-color: #e6f7ff;
  border-color: #1890ff;
  color: #1890ff;
}

.custom-range {
  margin-top: 20rpx;
}

.range-input {
  width: 100%;
  padding: 20rpx;
  border: 1rpx solid #d9d9d9;
  border-radius: 8rpx;
  font-size: 28rpx;
  background-color: white;
}

.range-tip {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
  display: block;
}

/* 颜色选择 */
.color-options {
  display: flex;
  gap: 20rpx;
}

.color-option {
  flex: 1;
  padding: 30rpx 20rpx;
  background-color: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  text-align: center;
}

.color-option.active {
  background-color: #e6f7ff;
  border-color: #1890ff;
}

.option-icon {
  font-size: 40rpx;
  margin-bottom: 10rpx;
}

.option-text {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 5rpx;
}

.option-price {
  font-size: 24rpx;
  color: #666;
}

/* 单双面选择 */
.side-options {
  display: flex;
  gap: 20rpx;
}

.side-option {
  flex: 1;
  padding: 30rpx 20rpx;
  background-color: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  text-align: center;
  position: relative;
}

.side-option.active {
  background-color: #e6f7ff;
  border-color: #1890ff;
}

.option-discount {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  background-color: #ff4d4f;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
}

/* 选择器 */
.picker-display {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #f8f9fa;
  border: 1rpx solid #e9ecef;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
}

.picker-arrow {
  color: #999;
}

/* 备注输入 */
.remark-input {
  width: 100%;
  min-height: 120rpx;
  padding: 20rpx;
  border: 1rpx solid #d9d9d9;
  border-radius: 8rpx;
  font-size: 28rpx;
  background-color: white;
}

.char-count {
  font-size: 24rpx;
  color: #999;
  text-align: right;
  margin-top: 10rpx;
  display: block;
}

/* 价格计算 */
.price-section {
  margin-bottom: 30rpx;
}

.price-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.price-item:last-child {
  border-bottom: none;
}

.price-label {
  font-size: 28rpx;
  color: #666;
}

.price-value {
  font-size: 28rpx;
  color: #333;
}

.price-value.discount {
  color: #ff4d4f;
}

.price-total {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-top: 2rpx solid #f0f0f0;
  margin-top: 20rpx;
}

.total-label {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.total-amount {
  font-size: 36rpx;
  color: #ff4d4f;
  font-weight: bold;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  padding: 20rpx 0;
}

.action-buttons button {
  flex: 1;
}
